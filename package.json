{
  "name": "@tarocch1/nodeaas",
  "version": "0.0.1",
  "description": "A simple Node.js FaaS framework.",
  "license": "MIT",
  "author": "Tarocch1 <huiben.fang@gmail.com> (https://github.com/Tarocch1)",
  "homepage": "https://github.com/Tarocch1/nodeaas#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tarocch1/nodeaas.git"
  },
  "bugs": "https://github.com/Tarocch1/nodeaas/issues",
  "bin": {
    "nodeaas": "./bin/nodeaas.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "prebuild": "tsc --noEmit",
    "build": "node scripts/build.js",
    "lint": "eslint --fix 'src/**/*.ts' 'packages/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --max-warnings=0",
      "git add"
    ],
    "packages/**/*.ts": [
      "eslint --fix --max-warnings=0",
      "git add"
    ]
  },
  "dependencies": {
    "base64url": "^3.0.1",
    "commander": "^8.2.0",
    "cookie": "^0.4.1",
    "cron-parser": "^4.0.0",
    "dayjs": "^1.10.7",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@tarocch1/eslint-config": "^1.0.1",
    "@types/cookie": "^0.4.1",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "esbuild": "^0.13.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  }
}
